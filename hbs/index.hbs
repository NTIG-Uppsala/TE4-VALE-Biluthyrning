<html lang="{{index.lang}}">

    <head>
        <meta name="robots" content="noindex, nofollow" />
        <meta name="googlebot" content="noindex, nofollow" />

        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{index.ntb_car_rental}}</title>

        <!-- Google fonts import -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Oswald:wght@200..700&display=swap"
            rel="stylesheet"
        />

        <!-- Adobe font import -->
        <link rel="stylesheet" href="https://use.typekit.net/juf0kst.css" />

        <link rel="stylesheet" href="style/variables.css" />
        <link rel="stylesheet" href="style/main.css" />

        <script src="js/openHours.js"></script>
        <script src="js/listOfZIPCodes.js"></script>
        <script defer src="js/checkOpeningHours.js"></script>
        <script defer src="js/checkZIPCode.js"></script>
        <script defer src="js/vatOnCars.js"></script>
        <script defer src="js/hamburgerMenu.js"></script>

        <!-- Make sure this script is loaded last for testing purposes -->
        <script defer src="js/loadsLastForTests.js"></script>
    </head>

    <body>
        <header>
            <div>
                <h3>{{index.ntb_car_rental}}</h3>
            </div>

            <button class="hamburger-menu" aria-label="Toggle menu">
                &#9776;
            </button>

            <nav class="nav-bar">
                <a href="#opening-hours-section">{{index.opening_hours}}</a>
                <a href="#our-cars-section">{{index.our_cars}}</a>
                <a href="#delivery-section">{{index.delivery}}</a>
                <a href="#closed-dates-container">{{index.closed_dates}}</a>
            </nav>

            <div class="dropdown-menu">
                <a href="#opening-hours-section">{{index.opening_hours}}</a>
                <a href="#our-cars-section">{{index.our_cars}}</a>
                <a href="#delivery-section">{{index.delivery}}</a>
                <a href="#closed-dates-container">{{index.closed_dates}}</a>
            </div>
        </header>

        <main>
            <section class="welcome-section">
                <div class="background-image">
                    <img
                        src="assets/pictures/row_of_cars_no_car_no_pillar1080.jpeg"
                        alt="{{index.background_image}}"
                    />
                </div>

                <h1>{{index.welome}}</h1>

                <p>
                    {{index.phone_contact_pt1}}
                    <a
                        href="tel:+46630555555"
                    >+46&nbsp;63&#8209;055&nbsp;55&nbsp;55</a>
                    {{index.phone_contact_pt2}}
                </p>
            </section>

            <section class="opening-hours-section" id="opening-hours-section">
                <h2>{{index.opening_hours}}</h2>

                <p
                    id="dynamic-opening-hours-tag"
                >{{index.current_status_default}}</p>

                <table class="open-hours-table">
                    <tbody>
                        <tr>
                            <td>{{index.monday_friday}}</td>
                            <td>10:00 - 16:00</td>
                        </tr>
                        <tr>
                            <td>{{index.saturday}}</td>
                            <td>12:00 - 15:00</td>
                        </tr>
                        <tr>
                            <td>{{index.sunday}}</td>
                            <td>{{index.closed}}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="#closed-dates-container">{{index.see_closed_dates}}</a>
            </section>

            <section class="our-cars-section" id="our-cars-section">
                <h2>{{index.our_cars}}</h2>

                <div class="vat-container">
                    <button
                        id="vat-button"
                        class="active"
                    >{{index.vat_included}}</button>
                    <button id="no-vat-button">{{index.vat_excluded}}</button>
                </div>

                <table class="our-cars-table">
                    <thead>
                        <tr>
                            <th>{{index.car}}</th>
                            <th>{{index.year_model}}</th>
                            <th>{{index.price}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Audi A6</td>
                            <td>2011</td>
                            <td class="price">800 kr</td>
                        </tr>
                        <tr>
                            <td>Audi S3</td>
                            <td>2015</td>
                            <td class="price">450 kr</td>
                        </tr>
                        <tr>
                            <td>Cadillac Escalade</td>
                            <td>1999</td>
                            <td class="price">500 kr</td>
                        </tr>
                        <tr>
                            <td>Kia Carens</td>
                            <td>2022</td>
                            <td class="price">400 kr</td>
                        </tr>
                        <tr>
                            <td>Kia Soul</td>
                            <td>2020</td>
                            <td class="price">400 kr</td>
                        </tr>
                        <tr>
                            <td>Mitsubishi Outlander</td>
                            <td>2018</td>
                            <td class="price">450 kr</td>
                        </tr>
                        <tr>
                            <td>Renault Kadjar</td>
                            <td>2020</td>
                            <td class="price">250 kr</td>
                        </tr>
                        <tr>
                            <td>Subaru Outback</td>
                            <td>2020</td>
                            <td class="price">300 kr</td>
                        </tr>
                        <tr>
                            <td>Volvo XC40</td>
                            <td>2018</td>
                            <td class="price">800 kr</td>
                        </tr>
                        <tr>
                            <td>VW Polo</td>
                            <td>2022</td>
                            <td class="price">300 kr</td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <section
                class="delivery-section"
                style="display: none;"
                id="delivery-section"
            >
                <!-- Unhides this section if js is enabled, otherwise it will be hidden -->
                <script
                >document.querySelector(".delivery-section").style.display =
                    "flex"</script>

                <h2>{{index.delivery}}</h2>

                <p>{{index.delivery_description}}</p>

                <div class="input-container">
                    <input
                        type="number"
                        placeholder="{{index.zip_code}}"
                        id="zip-input"
                    />
                    <button id="zip-button">{{index.search}}</button>
                </div>

                <p id="delivery-status-tag"></p>

                <div class="background-image">
                    <img
                        src="assets/pictures/car_on_map1080.jpg"
                        alt="{{index.background_image}}"
                    />
                </div>
            </section>

            <noscript>
                <section class="delivery-section-noscript">
                    <h2>{{index.delivery}}</h2>

                    <p>{{index.delivery_description}}</p>

                    <table class="delivery-table">
                        <thead>
                            <tr>
                                <th>{{index.zip_code}}</th>
                                <th>{{index.price}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
