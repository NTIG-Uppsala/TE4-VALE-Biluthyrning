                        </tr>
                        <tr>
                            <td>{{index.31_december}}</td>
                            <td>{{index.new_years_eve}}</td>
                            <td>{{index.closed}}</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </main>

        <footer>
            <div class="footer-container">
                <h4>{{index.phone}}</h4>
                <a
